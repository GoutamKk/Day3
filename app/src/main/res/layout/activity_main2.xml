<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/topImg"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:src="@drawable/img_1"
        android:adjustViewBounds="true"
        android:layout_marginBottom="20dp"
        android:scaleType="fitCenter"
        app:shapeAppearanceOverlay="@style/RoundImg"
        />

    <TextView
        android:id="@+id/fistxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome Back!"
        android:textColor="#492092"
        android:layout_below="@+id/topImg"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/thirdtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fistxt"
        android:hint="Email"
        android:layout_marginBottom="6dp"
        app:startIconDrawable="@drawable/email_24"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/email_24"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fortxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thirdtxt"
        android:hint="Password"
        android:inputType="textPassword"
        android:drawableRight="@drawable/visiblityon"
        android:layout_marginBottom="6dp"
        app:passwordToggleEnabled="true"
        app:startIconDrawable="@drawable/shuttle_24"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/shuttle_24"
            android:inputType="textPassword"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/signupBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fortxt"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:text="Sign In"
        android:textColor="#ffffff"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/topBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000FF"
        android:text="Sign Up"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_above="@+id/fistxt"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentLeft="true"
        />
    <Button
        android:id="@+id/topBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000FF"
        android:text="Sign In"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:layout_above="@+id/fistxt"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="40dp"
        />
    <TextView
        android:id="@+id/fivetxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-------- Or Sign up With ---------"
        android:layout_below="@+id/signupBtn"
        android:textStyle="bold"
        android:gravity="center"
        />
    <Button
        android:id="@+id/bottomBtn1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Google"
        android:textColor="#ffffff"
        android:layout_below="@id/fivetxt"
        android:backgroundTint="#7744E7"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="60dp"
        />
    <Button
        android:id="@+id/bottomBtn2"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="Facebook"
        android:textColor="#ffffff"
        android:layout_below="@id/fivetxt"
        android:backgroundTint="#7744E7"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        />

</RelativeLayout>